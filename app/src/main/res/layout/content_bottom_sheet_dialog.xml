<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#7fdddddd"
    android:layout_height="100dp">

    <ImageView
        android:id="@+id/iv_wechat"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:contentDescription="@string/app_name"
        android:padding="20dp"
        android:src="@mipmap/share_zhuce_weixin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@id/iv_qq"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_qq"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:contentDescription="@string/app_name"
        android:padding="20dp"
        android:src="@mipmap/share_zhuce_qq"
        app:layout_constraintRight_toLeftOf="@id/iv_friendCircle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/iv_wechat"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_friendCircle"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:contentDescription="@string/app_name"
        android:padding="20dp"
        android:src="@mipmap/share_zhucepengyouquan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@id/iv_qq"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>