<?xml version="1.0" encoding="utf-8"?>
<me.tmgg.viewsdemoapp.ui.about.ElasticDragDismissFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dragDismissFrameLayout"
    android:layout_width="match_parent"
    app:dragDismissDistance="120dp"
    app:dragDismissScale="0.8"
    android:layout_height="match_parent"
    tools:context=".picpreview.ImagePreviewActivity">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
       >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
                android:id="@+id/iv_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>

</me.tmgg.viewsdemoapp.ui.about.ElasticDragDismissFrameLayout>