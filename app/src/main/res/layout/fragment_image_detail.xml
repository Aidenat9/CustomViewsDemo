<?xml version="1.0" encoding="utf-8"?>
<me.tmgg.viewsdemoapp.picpreview.ElasticDragDismissFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dragDismissFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".picpreview.ImageDetailFragment">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
       >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/iv_picture"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </FrameLayout>
    </android.support.v4.widget.NestedScrollView>

</me.tmgg.viewsdemoapp.picpreview.ElasticDragDismissFrameLayout>