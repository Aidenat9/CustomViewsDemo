<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="me.tmgg.viewsdemoapp.MainActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:orientation="vertical"
       android:layout_height="wrap_content">
       <Button
           android:id="@+id/btn_demo"
           style="@style/button_default_style"
           android:text="demo" />
       <Button
           android:id="@+id/btn_web"
           android:text="web_pdfjs"
           style="@style/button_default_style" />
       <Button
           android:id="@+id/btn_twofloor"
           android:text="淘寶二樓demo"
           style="@style/button_default_style" />
       <Button
           android:id="@+id/btn_thread"
           android:text="ScheduledThreadpoolActivity"
           style="@style/button_default_style" />
       <Button
           android:id="@+id/btn_piccommon"
           android:text="图片浏览(共享元素)"
           style="@style/button_default_style" />
       <Button
           android:id="@+id/btn_views"
           android:text="自定义view绘制"
           style="@style/button_default_style" />

       <me.tmgg.viewsdemoapp.widgets.SinkFrameLayout
           android:id="@+id/sfl"
           android:background="?attr/selectableItemBackground"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <TextView
               android:layout_width="match_parent"
               android:gravity="center"
               android:text="你好吗"
               android:textColor="#ffffff"
               android:background="@color/colorPrimaryDark"
               android:textSize="20sp"
               android:layout_height="match_parent" />
       </me.tmgg.viewsdemoapp.widgets.SinkFrameLayout>
       <Button
           android:id="@+id/btn_valueAnim"
           android:text="valueAnim"
           style="@style/button_default_style"/>
       <me.tmgg.viewsdemoapp.widgets.SinkFrameLayout
           android:id="@+id/btn_behavior"
           android:background="?attr/selectableItemBackground"
           android:layout_width="match_parent"
           android:layout_height="50dp">
           <TextView
               android:layout_width="match_parent"
               android:gravity="center"
               android:text="custom_behavior"
               android:textColor="#ffffff"
               android:background="@color/colorAccent"
               android:textSize="20sp"
               android:layout_height="match_parent" />
       </me.tmgg.viewsdemoapp.widgets.SinkFrameLayout>


       <me.tmgg.viewsdemoapp.widgets.LoadingText
           android:id="@+id/loadingText"
           android:layout_marginTop="10dp"
           android:layout_width="100dp"
           android:layout_height="100dp" />


       <me.tmgg.viewsdemoapp.widgets.ability.AbilityMapView
           android:layout_marginTop="5dp"
           android:id="@+id/abilityView"
           android:layout_width="300dp"
           android:layout_height="300dp" />




       


   </LinearLayout>


</android.support.v4.widget.NestedScrollView>
