<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_car_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="14dp"
        android:includeFontPadding="false"
        android:text="豫AY566P"
        android:textColor="#333333"
        android:textSize="18sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv_car_brand"
        android:layout_width="16dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@id/tv_car_num"
        android:adjustViewBounds="true"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/tv_car_brand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_car_num"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:textSize="14sp"
        android:text="奥迪进口-A5"
        android:layout_marginBottom="14dp"
        android:textColor="#333333" />

    <TextView
        android:textColor="#333333"
        android:id="@+id/tv_carmanage_click"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:paddingRight="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:textSize="14sp"
        android:layout_marginRight="15dp"
        android:gravity="center"
        android:background="@drawable/shape_border_carmanage"
        android:text="车辆管理"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginTop="22dp"/>

</RelativeLayout>