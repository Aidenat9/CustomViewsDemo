<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="me.tmgg.viewsdemoapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".CustomViewActivity"></activity>
        <activity android:name=".ScheduledThreadpoolActivity" />
        <activity
            android:name=".TwofloorDemoActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity android:name=".WebActivity" />
        <activity
            android:name=".DemoFragmentActivity"
            android:taskAffinity=".demoAct" />
        <activity android:name=".CustomBehaviorActivity" />
        <activity android:name=".ValueAnimActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".picpreview.PreviewPictureActivity"
            android:launchMode="singleTop"
            android:screenOrientation="portrait" />
        <activity
            android:name=".PicCommonActivity"
            android:label="共享元素实例－更新共享元素"
            android:screenOrientation="portrait" />
        <activity
            android:name=".picpreview.ImagePreviewActivity"
            android:label="图片全屏浏览页面"
            android:screenOrientation="portrait"
            android:theme="@style/WebViewTheme"
            android:windowSoftInputMode="stateAlwaysHidden" />
    </application>

</manifest>